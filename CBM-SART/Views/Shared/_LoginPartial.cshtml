@using Microsoft.AspNet.Identity
<div class="login-sidebar">
    @if (Session["Usuario"] != null)
    {
        CBM_SART.Models.iso_usuario Usuario = (CBM_SART.Models.iso_usuario)HttpContext.Current.Session["Usuario"];
        
        <div class="login-name">
            <a href="/Usuario/Details/@Usuario.ius_id_usuario">@Usuario.ius_nombre_usuario</a>
        </div>      
        <ul class="txt-login">
        <li>
            <div class="img-login">
                <img height="100" width="100" src="~/images/user.gif" />
            </div>
        </li>
        <li><a href="/Usuario/Salir">Salir</a></li>

    </ul>
    }
    else
    {
        <div class="login-name">Nombre Usuario</div>  
        <ul class="txt-login">
            <li>
                <div class="img-login">
                    <img height="100" width="100" src="~/images/user.gif" />
                </div>
            </li>
            <li>@Html.ActionLink("Iniciar sesión", "Ingresar", "Usuario", new { url = "/" }, new { @id = "loginLink" })</li>
        </ul>
    }


