@using Microsoft.AspNet.Identity
<div class="login-sidebar">
    @if (Session["Usuario"] != null)
    {
        CBM_SART.Models.iso_usuario Usuario = (CBM_SART.Models.iso_usuario)HttpContext.Current.Session["Usuario"];
        
        <div class="login-name">
            <a data-modal href="/Usuario/Details/@Usuario.ius_id_usuario">@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Usuario.ius_nombre_usuario)</a>
        </div>      
        <ul class="txt-login">
        <li>
            <div class="img-login">

                @if (Usuario.ius_foto_archivo != null)
                {
                    <img  width="150" src="@Url.Action("GetImage", "Usuario", new { ID = Usuario.ius_id_usuario })" />
                }
                else
                {
                    <img height="100" width="100" src="~/images/user.gif" />
                }

            </div>
        </li>
        <li style="text-align:center"><a data-modal href="/Usuario/Edit/@Usuario.ius_id_usuario">Editar</a> - <a href="/Usuario/Salir">Salir</a></li>

    </ul>
    }
    else
    {
        <div class="login-name">Nombre Usuario</div>  
        <ul class="txt-login">
            <li>
                <div class="img-login">
                    <img height="100" width="100" src="~/images/user.gif" />
                </div>
            </li>
            <li>@Html.ActionLink("Iniciar sesión", "Ingresar", "Usuario", new { url = "/" }, new { @id = "loginLink" })</li>
        </ul>
    }

</div>

