                            <li><a class="@(Session["SidebarSelect"] == "indices" ? "select" : "")" href="#"><img class="boton-panel-imagen" src="@Url.Content("~/images/indicesr.png")" />Indices de Riesgo</a></li>
                            <li><a class="@(Session["SidebarSelect"] == "equipop" ? "select" : "")" href="@Url.Action("Index", "EquipoTrabajo")"><img class="boton-panel-imagen" src="@Url.Content("~/images/equipot.png")" />Equipos de Trabajo</a></li>
