                            <li><a class="@(Session["SidebarSelect"] == "incidente" ? "select" : "")" href="@Url.Action("Index", "Incidente")"><img class="boton-panel-imagen" src="@Url.Content("~/images/incidente.png")" />Incidentes</a></li>
