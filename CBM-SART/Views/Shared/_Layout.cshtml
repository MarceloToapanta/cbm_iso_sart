                        <li><a href="#"><img class="boton-panel-imagen" src="@Url.Content("~/images/config.png")" />Configuraciones</a></li>
                    </ul>
                </div>
            }
            @if (Session["Sidebar"] == "SistemaGestion")
            {
                <div class="sidebar-menus">
                    <ul class="list-panel-sg">
                        <li><a class="@(Session["SidebarSelect"] == "Inicio" ? "select" : "")" href="/SistemaGestion/"><img class="boton-panel-sg-p" src="@Url.Content("~/images/sg/inicio.png")" />PILARES DE LA GESTION SGP</a></li>
                        <li><a class="@(Session["SidebarSelect"] == "pilar1" ? "select" : "")" href="/SistemaGestion/Nivel_1/1"><img class=" boton-panel-sg" src="@Url.Content("~/images/sg/item.png")" />GESTION ADMINISTRATIVA</a></li>
                        <li><a class="@(Session["SidebarSelect"] == "pilar2" ? "select" : "")" href="/SistemaGestion/Nivel_1/2"><img class=" boton-panel-sg" src="@Url.Content("~/images/sg/item.png")" />GESTION TECNICA</a></li>
                        <li><a class="@(Session["SidebarSelect"] == "pilar3" ? "select" : "")" href="/SistemaGestion/Nivel_1/3"><img class="boton-panel-sg" src="@Url.Content("~/images/sg/item.png")" />GESTION DEL TALENTO HUMANO</a></li>
                        <li><a class="@(Session["SidebarSelect"] == "pilar4" ? "select" : "")" href="/SistemaGestion/Nivel_1/4"><img class="boton-panel-sg" src="@Url.Content("~/images/sg/item.png")" />PROCEDIMIENTOS OPERATIVOS BASICO Y/O RELEVANTES</a></li>
                    </ul>
                </div>
            }
            @if (Session["Sidebar"] == "Planes")
            {
                if (Session["SidebarSelect"] == "Tareas")
                {
                    <div class="sidebar-menus">
                        <ul class="list-panel-modulos">
                            <li><a class="@(Session["SidebarSelect"] == "Empresa" ? "select" : "")" href="@Url.Action("Index", "Plan")"><img class="boton-panel-imagen" src="@Url.Content("~/images/back.png")" />Regresar</a></li>
                            <li>
                                <div class="col-md-12 label label-success t-Completo">Tareas Completas: <span class="badge">@Session["nt1"]</span></div>
                            </li>
                            <li>
                                <div class="col-md-12 label label-warning t-Pendiente">Tareas Pendientes: <span class="badge">@Session["nt2"]</span></div>
                            </li>
                            <li>
                                <div class="col-md-12 label label-danger t-Atrasado">Tareas Atrasados: <span class="badge">@Session["nt3"]</span></div>
                            </li>
                            <li>
                                <div class="col-md-12 label label-default">Tareas Sin Estado: <span class="badge">@Session["nt4"]</span></div>
                            </li>
                        </ul>
                    </div>
                }
            }

        </div>

            </div>

            <div class="col-md-10">
                <div id="content" class="well-sm">
                        @{
                        if (Session["ErroUser"] != null && Session["ErroUser"] != "")
                        {
                            <div class="alert alert-dismissible alert-danger">
                                <div id="ms-error">
                                    <div>@Session["ErroUser"]</div>
                                </div>
                            </div>
                        }
                        else if (Session["AvisoUser"] != null && Session["AvisoUser"] != "")
                        {
                            <div class="alert alert-dismissible alert-warning">
                                <div id="ms-error">
                                    <div>@Session["AvisoUser"]</div>
                                </div>
                            </div>
                        }
                        Session["ErroUser"] = null;
                        Session["AvisoUser"] = null;
}
                    

                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="col-md-12">
                <div id="content" class="well-sm">
                    @RenderBody()
                </div>
            </div>
        }

        <div class="clear"></div>

