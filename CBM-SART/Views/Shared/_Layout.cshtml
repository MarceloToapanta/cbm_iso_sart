    <div class="body-content">
        @if (Session["Sidebar"] != "")
{
    <div class="col-md-2">
        <div id="sidebar">
            @Html.Partial("_LoginPartial")



            @if (Session["Sidebar"] == "VigilaciaSalud")
            {
                if (Session["SidebarSelect"] == "listariesgos")
                {
                    <div class="sidebar-menus">
                        <ul class="list-panel-riesgos">
                            <li class="back"><a href="@Url.Action("Index", "MatrizMRL")"><img class="boton-panel-imagen" src="@Url.Content("~/images/back.png")" />Regresar</a></li>
                            <li class="@(Session["TipoR"].ToString().Trim() == "1" ? "select" : "")">@Html.ActionLink("Riesgo Mecánico:", "Riesgos", "MatrizMRL", new { tipoRiesgo = 1 }, new { @class = "r-mecanico" })<span class="badge">1</span></li>
                            <li class="@(Session["TipoR"].ToString().Trim() == "2" ? "select" : "")">@Html.ActionLink("Riesgo Físico:", "Riesgos", "MatrizMRL", new { tipoRiesgo = 2 }, new { @class = "r-fisico" })<span class="badge">2</span></li>
                            <li class="@(Session["TipoR"].ToString().Trim() == "3" ? "select" : "")">@Html.ActionLink("Riesgo Químico:", "Riesgos", "MatrizMRL", new { tipoRiesgo = 3 }, new { @class = "r-quimico" })<span class="badge">3</span></li>
                            <li class="@(Session["TipoR"].ToString().Trim() == "4" ? "select" : "")">@Html.ActionLink("Riesgo Biológico:", "Riesgos", "MatrizMRL", new { tipoRiesgo = 4 }, new { @class = "r-biologico" })<span class="badge">4</span></li>
                            <li class="@(Session["TipoR"].ToString().Trim() == "5" ? "select" : "")">@Html.ActionLink("Riesgo Ergonómico:", "Riesgos", "MatrizMRL", new { tipoRiesgo = 5 }, new { @class = "r-ergonomico" })<span class="badge">5</span></li>
                            <li class="@(Session["TipoR"].ToString().Trim() == "6" ? "select" : "")">@Html.ActionLink("Riesgo Psicosociales:", "Riesgos", "MatrizMRL", new { tipoRiesgo = 6 }, new { @class = "r-psicosociales" })<span class="badge">6</span></li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="sidebar-menus">
                        <ul class="list-panel-modulos">
                            <li><a class="@(Session["SidebarSelect"] == "Personal" ? "select" : "")" href="@Url.Action("Index", "Personal")"><img class="boton-panel-imagen " src="@Url.Content("~/images/personal.png")" />Personal</a></li>
                            <li><a class="@(Session["SidebarSelect"] == "Cargo" ? "select" : "")" href="@Url.Action("Index", "Cargo") "><img class=" boton-panel-imagen" src="@Url.Content("~/images/puestot.png")" />Cargos</a></li>
                            <li><a class="@(Session["SidebarSelect"] == "Puesto" ? "select" : "")" href="@Url.Action("Index", "PuestoTrabajo") "><img class=" boton-panel-imagen" src="@Url.Content("~/images/puesto_t.png")" />Puestos de Trabajo</a></li>
                            <li><a class="@(Session["SidebarSelect"] == "Historia" ? "select" : "")" href="@Url.Action("Index", "HistoriaClinica/Panel")"><img class="boton-panel-imagen" src="@Url.Content("~/images/hclinica.png")" />Historias Clinicas</a></li>
