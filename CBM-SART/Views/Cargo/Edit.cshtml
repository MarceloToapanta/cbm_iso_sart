@model CBM_SART.Models.iso_cargo
@{   
}
<div class="title-window" style="height:32px">
    Permite modificar los datos del Cargo selecionado.
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-header">

    <h4 class="modal-title">Editar  Cargo</h4>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.icg_id_cargo)
            <div class="col-md-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.icg_nombre, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.icg_nombre, new { @class = "form-control required valid" })
                        @Html.ValidationMessageFor(model => model.icg_nombre)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_descripcion, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.icg_descripcion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.icg_descripcion)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_cod_clase_cargo, new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.icg_cod_clase_cargo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.icg_cod_clase_cargo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_num_trabajadores, new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.icg_num_trabajadores, new { @Value = "0", @class = "form-control valid" })
                        @Html.ValidationMessageFor(model => model.icg_num_trabajadores)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_jefe_inmediato, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.icg_jefe_inmediato, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.icg_jefe_inmediato)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_edad, new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.icg_edad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.icg_edad)
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.icg_genero, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.icg_genero, new SelectList(
                                new List<Object>{
                                new { value = "indistinto" , text = "Indistinto"  },
                                new { value = "masculino" , text = "Masculino" },
                                new { value = "femenino" , text = "Femenino" }
                                },
                                "value",
                                "text",
                                0), new { @class = "form-control valid" })
                        @Html.ValidationMessageFor(model => model.icg_genero)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_instruccion, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.icg_instruccion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.icg_instruccion)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_experiencia, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.icg_experiencia, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.icg_experiencia)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.icg_conocimiento_adicional, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.icg_conocimiento_adicional, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.icg_conocimiento_adicional)
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <h4 style="border-bottom: 1px solid #e5e5e5; margin-left: -10px; margin-right: -10px; padding-bottom: 10px;">Departamentos</h4>
                <div class="text-count" style="margin-left: -10px; margin-right: -10px; margin-bottom:10px">Selecione los departamentos a los que pertenece el cargo</div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.ListBox("Departamentos")
                </div>
            </div>

            <div style="clear:both"></div>
            <div class="modal-footer">
                <span id="progress" class="text-center" style="display: none;">
                    <img src="/images/wait.gif" alt="wiat" />
                    Espere...
                </span>
                <button class="btn btn-primary " type="submit" name="Guardar"> Guardar </button>
                <button class="btn btn-warning" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
<script>
    $("#Departamentos").select2({
        placeholder: "Selecione Depatamentos...",
        maxinumSelectionSize: 10,
        allowClear: true
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
