@model CBM_SART.Models.iso_usuario

@{
    ViewBag.Title = "Ingresar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = ViewBag.url;
}

<h2>Ingresar</h2>

@using (Html.BeginForm("Ingresar", "Usuario", new { url = url }, FormMethod.Post, null)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>iso_usuario</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ius_login, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ius_login)
                @Html.ValidationMessageFor(model => model.ius_login)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ius_password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ius_password)
                @Html.ValidationMessageFor(model => model.ius_password)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
