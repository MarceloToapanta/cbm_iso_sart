@model CBM_SART.Models.iso_usuario

@{
    ViewBag.Title = "Ingresar";
    string url = ViewBag.url;
}

<div class="title-window" style="height:32px">
    Ingresar - SART
    
</div>
<div class="modal-header">

    <h4 class="modal-title">Ingresar Datos de Usuario</h4>
</div>

@using (Html.BeginForm("Ingresar", "Usuario", new { url = url }, FormMethod.Post, null)) 
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.ius_login, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ius_login, new { @class = "form-control required"} )
                    @Html.ValidationMessageFor(model => model.ius_login)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ius_password, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.ius_password, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.ius_password)
                </div>
            </div>
            @Html.ValidationSummary(true)


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ingresar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
