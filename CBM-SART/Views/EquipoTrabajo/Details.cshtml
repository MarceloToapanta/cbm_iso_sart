@model CBM_SART.Models.iso_equipo_proteccion

@{
    ViewBag.Title = "Details";
}

<div class="title-window" style="height:32px">
    Permite visualizar e imprimir los datos relacionados al Equipo de Trabajo.
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-header">

    <h4 class="modal-title">Información del Equipo de Trabajo</h4>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="modal-body">
        <div class="form-horizontal">
            <div class="col-md-8">
                <div class="form-group">
                    @Html.LabelFor(model => model.iep_nombre_equipo_p, new { @class = "control-label col-md-2" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.iep_nombre_equipo_p, new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.iep_nombre_equipo_p)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.iep_stock, new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.iep_stock, new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.iep_stock)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.iep_ubic_imagen_equipo_p, new { @class = "control-label col-md-2" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.iep_ubic_imagen_equipo_p, new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.iep_ubic_imagen_equipo_p)
                    </div>
                    <br />
                    <br />
                    <div class="col-md-2"></div>
                    <div class="col-md-9">

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row" style="margin-top:0;">
                    <div class="editor-field">
                        <div class="inline-image-preivew">
                            @if (Model.iep_imagen_equipo_p == null)
                            {
                                <img id="blah" src="~/images/no_logo.png" alt="Logo de la Empresa" style="border: 1px solid #29ABE2; max-width: 200px; height: auto" />
                            }
                            else
                            {
                                <img id="blah" src="@Url.Action("GetImage", "EquipoTrabajo", new { ID = Model.iep_id_equipo_p })" alt="Logo de la Empresa" style="border: 1px solid #29ABE2; max-width: 200px; height: auto" />
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
            <div class="modal-footer">
                <span id="progress" class="text-center" style="display: none;">
                    <img src="/images/wait.gif" alt="wiat" />
                    Espere...
                </span>
                <button class="btn btn-primary" data-dismiss="modal">Imprimir</button>
                <button class="btn btn-warning" data-dismiss="modal">Cerrar</button>
            </div>


        </div>
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}