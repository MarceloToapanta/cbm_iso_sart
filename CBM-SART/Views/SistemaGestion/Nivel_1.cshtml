<div class="col-md-1"></div>

@section scripts{
    @Scripts.Render("~/scripts/appjs/phones.js")
    <script type="text/javascript">
        $(document).ready(function () { //////// Inicio Cargado el Document
            var left = -50;
            $(".bloque-nivel").each(function (index, element) {
                $(element).css('left', left);
                left = left + 20;
            });
        });
    </script>
}
