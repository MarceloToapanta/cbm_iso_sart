@model CBM_SART.Models.iso_puesto_trabajo

@{
}

<div class="title-window" style="height:32px">
    Permite eliminar el Puesto de Trabajo selecionado.
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-header">

    <div class="form-group">

        <h4>
            <span class="label label-danger">
                Estas seguro de eliminar este Puesto de Trabajo?
            </span>
        </h4>

    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ipt_id_puesto_t)

            <div class="form-group">
                @Html.LabelFor(model => model.ipt_nombre_puesto_t, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ipt_nombre_puesto_t, new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.ipt_nombre_puesto_t)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ipt_descrip_puesto_t, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.ipt_descrip_puesto_t, new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.ipt_descrip_puesto_t)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ipt_nro_trbajadores, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ipt_nro_trbajadores, new { @Value = "0", @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.ipt_nro_trbajadores)
                </div>
            </div>


            <div style="clear:both"></div>
            <div class="modal-footer">
                <span id="progress" class="text-center" style="display: none;">
                    <img src="/images/wait.gif" alt="wiat" />
                    Espere...
                </span>
                <button class="btn btn-primary" data-dismiss="modal">No</button>
                <input class="btn btn-danger" type="submit" value="Si" />
            </div>
        </div>
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


