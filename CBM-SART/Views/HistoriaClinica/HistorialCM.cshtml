@model IEnumerable<CBM_SART.Models.iso_consulta_medica>



<div class="title-window" style="height:32px">
    Historial de Consultas Médicas
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-header">

    <h4 class="modal-title">Selecione Consulta Médica</h4>
</div>

<div class="content-modal">
    <br />
    <table class="table table-bordered table-hover table-responsive table-condensed" id="HistorialCM">
        <thead>
            <tr>
                <th scope="col">Tipo Consulta</th>
                <th scope="col">Fecha</th>
                <th scope="col">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var colsulta in Model)
            {
                <tr>
                    <td>
                        @colsulta.iso_tipo_consulta_m.itc_nom_tipo_consulta_m
                    </td>
                    <td>
                        @String.Format("{0:MM/dd/yyyy}", @colsulta.icm_fecha_consulta)
                    </td>
                    <td>
                        <a data-modal='' href='/HistoriaClinica/Edit/@colsulta.icm_id_personal?idConsulta=@colsulta.icm_id_consulta' title='Editar'> <span class='glyphicon glyphicon-edit'> </span> </a>
                        <a data-modal='' href='/Cargo/delete/1' title='Eliminar'> <span class='glyphicon glyphicon-trash'> </span> </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

<div class="paging1 paging pagination-datatables pagination pagination-centered"></div>

<script type="text/javascript" src="/Scripts/Datatable/datatable.js"></script>
<link rel="stylesheet" type="text/css" href="/Content/Datatable/datatable-bootstrap.css">
<link rel="stylesheet" type="text/css" href="/Content/Datatable/datatable.css">
