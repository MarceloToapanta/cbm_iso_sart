<div class="content">
    
    @using (Html.BeginForm(From_url, null, FormMethod.Get))
    {
        <div class="search">
            @*<div class="col-md-10">
                <div class="input-group">

                    <input type="text"
                           name="filter"
                           value="@ViewBag.filter"
                           class="form-control"
                           style="display: inline; height:30px"
                           placeholder="Buscar por Nombre de la Tarea" />
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-sm" type="submit">Buscar</button>
                    </span>

                </div>
            </div>*@
            <div class="col-md-12" style="padding-left: 0px;">
                <div class="pull">
                    <a class="btn btn-success" data-modal="" href="/Plan/NuevaTarea/@ViewBag.id" id="btnCreate">
                        <span class="glyphicon glyphicon-plus"></span>
                        Nuevo
                    </a>
                    <span class="text-count">Nro. de Tareas : @ViewBag.total</span>
                </div>
                
            </div>
            
            <div class="clear"></div>
        </div>

        <div class="col-md-12 grid-content">
            @{
        var grid = new WebGrid(
                        canPage: true,
                        rowsPerPage: Model.PageSize,
                        canSort: true,
                        ajaxUpdateContainerId: "grid");

        grid.Bind(Model.Content, rowCount: Model.TotalRecords, autoSortAndPage: false);
        grid.Pager(WebGridPagerModes.All);

        @grid.GetHtml(htmlAttributes: new { id = "grid" },   // id for ajaxUpdateContainerId parameter
            fillEmptyRows: false,
                      tableStyle: "table table-bordered table-hover table-responsive table-condensed",
            mode: WebGridPagerModes.All,
            columns: grid.Columns(
                   grid.Column("idp_numero_plan", "Nro", style: "action", canSort: false),
                   grid.Column("idp_tarea", "Tarea", style: "col-lg-4", canSort: false),
                   grid.Column("idp_fecha_comienzo", "F. Comienzo", style: "col-lg-1", format: (item) => string.Format("{0:dd/MM/yyyy}", item.idp_fecha_comienzo), canSort: false),
                   grid.Column("idp_fecha_fin", "F. Fin", style: "col-lg-1", format: (item) => string.Format("{0:dd/MM/yyyy}", item.idp_fecha_fin), canSort: false),
                   grid.Column("idp_cantidad", "Cantidad", style: "col-lg-1", canSort: false),
                   grid.Column("idp_estado", "Estado", style: "col-lg-1", canSort: false),
              grid.Column(header: "Acción", canSort: false, style: "action",
                     format: @<text>
                @Html.Raw("<a data-modal='' href='/Plan/details/" + item.idp_id_detalle_plan + "' id='" + item.idp_id_detalle_plan + "' title='Detalles'> <span class='glyphicon glyphicon-search'> </span> </a>")
                @Html.Raw("<a data-modal='' href='/Plan/edit/" + item.idp_id_detalle_plan + "' id='" + item.idp_id_detalle_plan + "' title='Editar'> <span class='glyphicon glyphicon-edit'> </span> </a>")
                @Html.Raw("<a data-modal='' href='/Plan/delete/" + item.idp_id_detalle_plan + "' id='" + item.idp_id_detalle_plan + "' title='Eliminar'> <span class='glyphicon glyphicon-trash'> </span> </a>")
                    </text>)));
            }
        </div>
        <div class="clear"></div>
    }
</div>



