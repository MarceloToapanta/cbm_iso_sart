    <div class="col-md-12" style="  padding-left: 0px;">
        <div class="col-md-12" style="padding-left: 0px;">Código : @ViewBag.nombreplan[0].ipl_codigo_plan</div>
        <div class="col-md-12" style="padding-left: 0px;">Nombre : @ViewBag.nombreplan[0].ipl_nombre_plan</div>
        <div class="col-md-12" style="padding-left: 0px;">Descripción : @ViewBag.nombreplan[0].ipl_descripcion_plan</div>
    </div>
    <div class="clear"></div>
        
